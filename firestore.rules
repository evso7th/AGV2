
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create, update: if isOwner(userId);
    }

    match /masterpieces/{id} {
      // #ЗАЧЕМ: Открытие для публичного чтения (социальное наследие).
      allow read, list: if true;
      allow create: if isSignedIn();
    }

    match /heritage_axioms/{id} {
      // #ЗАЧЕМ: Открытие наследия для всех поколений AuraGroove.
      // #ЧТО: Публичное чтение разрешено для корректной работы счетчиков и аналитики.
      allow read, list: if true;
      allow create, delete: if isSignedIn();
    }
  }
}
