
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents an individual user.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "displayName", "createdAt", "updatedAt"]
    },
    "Masterpiece": {
      "title": "Masterpiece",
      "type": "object",
      "description": "A successful musical combination saved to global memory.",
      "properties": {
        "seed": { "type": "number" },
        "mood": { "type": "string" },
        "genre": { "type": "string" },
        "density": { "type": "number" },
        "bpm": { "type": "number" },
        "instrumentSettings": { "type": "object" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["seed", "mood", "genre", "timestamp"]
    },
    "HeritageAxiom": {
      "title": "HeritageAxiom",
      "type": "object",
      "description": "A digitised musical fragment from human heritage, used as a seed for evolution.",
      "properties": {
        "id": { "type": "string" },
        "phrase": { "type": "array", "items": { "type": "number" } },
        "dynasty": { "type": "string" },
        "origin": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["phrase", "dynasty", "origin", "timestamp"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profiles."
    },
    "/masterpieces/{masterpieceId}": {
      "schema": { "$ref": "#/backend/entities/Masterpiece" },
      "description": "Global pool of successful musical seeds for evolutionary inheritance."
    },
    "/heritage_axioms/{axiomId}": {
      "schema": { "$ref": "#/backend/entities/HeritageAxiom" },
      "description": "Digitised human musical fragments feeding the global DNA pool."
    }
  }
}
