
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents an individual user.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "displayName", "createdAt", "updatedAt"]
    },
    "Masterpiece": {
      "title": "Masterpiece",
      "type": "object",
      "description": "A successful musical combination saved to global memory.",
      "properties": {
        "seed": { "type": "number" },
        "mood": { "type": "string" },
        "genre": { "type": "string" },
        "density": { "type": "number" },
        "bpm": { "type": "number" },
        "instrumentSettings": { "type": "object" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["seed", "mood", "genre", "timestamp"]
    },
    "HeritageAxiom": {
      "title": "HeritageAxiom",
      "type": "object",
      "description": "A vector-indexed musical fragment for the AuraGroove Hypercube.",
      "properties": {
        "id": { "type": "string" },
        "phrase": { "type": "array", "items": { "type": "number" } },
        "role": { "type": "string", "enum": ["melody", "bass", "drums", "accomp"] },
        "genre": { "type": "string" },
        "commonMood": { "type": "string", "enum": ["dark", "neutral", "light"] },
        "mood": { "type": "string" },
        "compositionId": { "type": "string" },
        "barOffset": { "type": "number" },
        "vector": {
          "type": "object",
          "properties": {
            "t": { "type": "number", "description": "Tension (0-1)" },
            "b": { "type": "number", "description": "Brightness (0-1)" },
            "e": { "type": "number", "description": "Entropy/Rhythm Irregularity (0-1)" },
            "h": { "type": "number", "description": "Harmonic Stability (0-1)" }
          }
        },
        "tags": { "type": "array", "items": { "type": "string" } },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["phrase", "role", "compositionId", "commonMood", "vector", "timestamp"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profiles."
    },
    "/masterpieces/{masterpieceId}": {
      "schema": { "$ref": "#/backend/entities/Masterpiece" },
      "description": "Global pool of successful musical seeds for evolutionary inheritance."
    },
    "/heritage_axioms/{axiomId}": {
      "schema": { "$ref": "#/backend/entities/HeritageAxiom" },
      "description": "The Hypercube Axiom Bank. Vector-indexed musical fragments."
    }
  }
}
